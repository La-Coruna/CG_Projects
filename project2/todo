def drawXZ():
    glBegin(GL_LINES)
    glColor3ub(255, 255, 255)
    for i in range(-5,6):
        glVertex3fv(np.array([i,0,5]))
        glVertex3fv(np.array([i,0,-5]))
        glVertex3fv(np.array([5,0,i]))
        glVertex3fv(np.array([-5,0,i]))
    glEnd()
